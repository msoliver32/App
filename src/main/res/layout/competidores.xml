<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_deep_teal_500"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_voltaMenuPrincipalCompetidores"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/material_deep_teal_500"
            android:onClick="onClick"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Competidores"
            android:textSize="18sp" />
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/edt_nomeApelidoCompetidores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:completionThreshold="1"
        android:ems="10"
        android:hint="Nome/Apelido"
        android:inputType="textAutoComplete"
        android:maxLength="30"
        android:singleLine="true"></AutoCompleteTextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_adicionarCompetidores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar" />

        <Button
            android:id="@+id/btn_alterarCompetidores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alterar" />
    </LinearLayout>

    <GridView
        android:columnWidth="90dp"
        android:gravity="center_vertical"

        android:horizontalSpacing="10dp"
        android:id="@+id/gridview"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:numColumns="1"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        />


</LinearLayout>
