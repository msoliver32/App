<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_deep_teal_500"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgbtn_voltaMenuCompetidoresCompetidor"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@color/material_deep_teal_500"
            android:onClick="onClick"
            android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Competidor"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_nomeApelidoCompetidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:completionThreshold="1"
        android:ems="10"
        android:verticalSpacing="10dp"
        android:hint="Nome/Apelido"
        android:inputType="textAutoComplete"
        android:maxLength="30"
        android:singleLine="true">
    </EditText>

    <AutoCompleteTextView
        android:id="@+id/edt_timeCompetidor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:completionThreshold="1"
        android:ems="10"
        android:verticalSpacing="10dp"
        android:hint="Time/Seleção"
        android:inputType="textAutoComplete"
        android:maxLength="30"
        android:singleLine="true">
    </AutoCompleteTextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_adicionarCompetidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar" />

        <Button
            android:id="@+id/btn_cancelarCompetidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar" />
    </LinearLayout>

</LinearLayout>
